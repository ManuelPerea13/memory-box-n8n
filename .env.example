# --- n8n ---
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=tu_password_seguro

# URL pública donde n8n recibe webhooks (necesaria para que Django/Twilio lleguen)
# En producción: https://n8n.tudominio.com
# En local con ngrok: https://xxx.ngrok.io
N8N_HOST=localhost
N8N_PROTOCOL=http
WEBHOOK_URL=http://localhost:5678/

# Zona horaria
GENERIC_TIMEZONE=America/Argentina/Buenos_Aires
TZ=America/Argentina/Buenos_Aires

# --- Telegram (para avisos a admins) ---
# Crear bot con @BotFather, obtener token
TELEGRAM_BOT_TOKEN=
# Chat ID del grupo o usuario admin (obtener con @userinfobot o mensaje al bot)
TELEGRAM_CHAT_ID=

# --- Twilio (para WhatsApp a admins) ---
# Cuenta Twilio - https://console.twilio.com
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
# Número WhatsApp de Twilio (ej: +14155238886)
TWILIO_WHATSAPP_FROM=
# Número(s) WhatsApp de admins a notificar (ej: +5491112345678)
ADMIN_WHATSAPP_NUMBER=

# --- Django (para que el back llame al webhook) ---
# URL del webhook de n8n - se usa en memory-box-back
N8N_WEBHOOK_URL=http://localhost:5678/webhook/new-order
